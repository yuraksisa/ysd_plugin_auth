<div class="row items-push push-50-t push-30">
  <div class="col-md-6 col-md-offset-3">
    <form id="form_login" name="form_login" action="/login" method="post" class='form-horizontal' style="padding-top:20px">

          <div class="form-group">
            <div class="col-xs-12">
              <div class="form-material form-material-primary">
                <input type="text" id="username" name="username" maxlength="20" class="form-control" placeholder="<%= t.login_form.username %>"/>
                <label for="username"><%= t.login_form.username %></label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="form-material form-material-primary">
                <input type="password" id="password" name="password" maxlength="20" class="form-control" placeholder="<%= t.login_form.password %>"/>
                 <label for="username"><%= t.login_form.password %></label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-offset-3">
              <button name="button" type="submit" class="btn btn-block btn-primary">
                <i class="fa fa-arrow-right pull-right"></i> <%= t.login_form.login %>
              </button>            
            </div>
          </div>

          <% if show_create_account %>
          <div class="formrow formrow-botonera top-space">
            <div>
              <span><a id="create_account" href="/profile/register"><%= t.login_form.create_account %></a></span>
            </div>        
              <!--input type="button" id="signup" name="signup" class="form-button signup-button" value="<%= t.login_form.create_account%>" style="width:100%"/-->
          </div>
          <% end %>      
          <% if show_password_forgotten %>
            <div>
              <span><a href="/profile/password-forgotten"><%= t.login_form.can_access_your_account %></a></span>
            </div>
          <% end %>
    </form>
    
    <%= login_strategies %>
  </div>
</div>
<script type="text/javascript">
  
  require(['jquery','jquery.validate'], function($) {
    loginView = {
      init : function() {

             	  $("#form_login").validate(
                  {
                  	
                    debug: true,
  	       
  	                submitHandler: function(form) 
  	                {
  	       
  	                  form.submit();
  	       	
  	                },
                  	
                 	         
                    rules: {
                       'username': "required",
                       'password': "required"  	
                    },
         
                    messages: {
                       'username': "<%= t.login_model.user_name_required %>",
                       'password': "<%= t.login_model.password_required %>"	
                    }   	
                  }
                  );
        
        $('form[name=form_login]').bind('focus', 
          function() {
            $('input[name=username]').focus();	
          });

        //$('#signup').bind('click', function(event) { window.location.href = '/profile/signup'  });
      }	
    }
    loginView.init();
    $('input[name=username]').focus();
  });
</script>